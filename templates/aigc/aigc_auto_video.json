{"name": "AIGC全自动视频生成", "description": "基于主题自动生成视频文案、AI配图/视频、语音解说、背景音乐，并一键合成视频", "version": "1.0", "character": "aigc", "theme": "auto_video", "is_aigc_template": true, "parameters": {"topic": {"type": "string", "description": "视频主题", "default": "如何制作美味的意大利面"}, "video_size": {"type": "string", "description": "视频尺寸（portrait/landscape/square）", "default": "portrait"}, "duration": {"type": "number", "description": "视频时长（秒）", "default": 60}, "fps": {"type": "number", "description": "帧率", "default": 25}, "llm_model": {"type": "string", "description": "LLM模型名称", "default": "glm-4.5-flash"}, "llm_api_key": {"type": "string", "description": "LLM API Key", "default": ""}, "comfyui_server_url": {"type": "string", "description": "ComfyUI服务器地址", "default": "http://127.0.0.1:8188"}, "image_workflow_path": {"type": "string", "description": "图片生成工作流路径", "default": ""}, "video_workflow_path": {"type": "string", "description": "视频生成工作流路径", "default": ""}, "tts_feat_id": {"type": "string", "description": "TTS预编码特征ID", "default": ""}, "tts_prompt_wav": {"type": "string", "description": "TTS参考音频路径", "default": ""}, "tts_prompt_text": {"type": "string", "description": "TTS参考文本", "default": ""}, "background_music": {"type": "string", "description": "背景音乐路径", "default": ""}, "background_music_volume": {"type": "number", "description": "背景音乐音量（0.0-1.0）", "default": 0.3}}, "tasks": [{"id": "task_generate_script", "name": "生成视频文案", "type": "llm_generate_script", "params": {"topic": "${topic}", "duration": "${duration}", "llm_model": "${llm_model}", "llm_api_key": "${llm_api_key}", "output_name": "script"}}, {"id": "task_generate_media", "name": "生成AI配图/视频", "type": "comfyui_generate_media", "params": {"script": "${task_generate_script.output}", "comfyui_server_url": "${comfyui_server_url}", "image_workflow_path": "${image_workflow_path}", "video_workflow_path": "${video_workflow_path}", "output_name": "media_files"}, "depends_on": ["task_generate_script"]}, {"id": "task_tts", "name": "语音合成", "type": "tts", "params": {"text": "${task_generate_script.output.full_text}", "feat_id": "${tts_feat_id}", "reference_audio": "${tts_prompt_wav}", "reference_text": "${tts_prompt_text}", "output_name": "narration"}, "depends_on": ["task_generate_script"]}, {"id": "task_merge", "name": "合并视频", "type": "video_merge", "params": {"input_videos": "${task_generate_media.output}", "output_name": "merged"}, "depends_on": ["task_generate_media", "task_tts"]}, {"id": "task_bgm", "name": "添加背景音乐", "type": "video_editor", "params": {"input_video": "${task_merge.output}", "add_audio": "${background_music}", "audio_volume": "${background_music_volume}", "output_name": "final"}, "depends_on": ["task_merge"]}]}